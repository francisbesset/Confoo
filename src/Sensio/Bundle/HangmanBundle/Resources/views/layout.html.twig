<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}The Hangman Workshop{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link href="http://fonts.googleapis.com/css?family=Arvo" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/sensiohangman/css/style.css') }}" />
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="wrapper">
            <div id="header">
                <div id="logo">
                    <h1>
                        <a href="#">Hangman</a>
                    </h1>
                </div>
                <div id="menu">
                    <ul>
                        <li class="first current_page_item">
                            <a href="{{ path('_homepage') }}">Homepage</a>
                        </li>

                    {% if (not is_granted('IS_AUTHENTICATED_FULLY')) %}

                        <li>
                            <a href="{{ path('registration') }}">Register</a>
                        </li>
                        <li>
                            <a href="{{ path('login') }}">Login</a>
                        </li>

                    {% else %}

                        <li>
                            <a href="{{ path('logout') }}">
                                Logout ({{ app.user.username }})
                            </a>
                        </li>

                    {% endif %}
                        <li>
                            <a href="#">Top10</a>
                        </li>
                    </ul>
                    <br class="clearfix" />
                </div>
            </div>

            <div id="page">
                <div id="content">
                    {% block body %}{% endblock %}
                </div>
                <div id="sidebar">
                    <h3>Last Games</h3>

                    {%
                        render "SensioHangmanBundle:Game:games"
                        with { 'limit': 5 },
                        { 'standalone': true }
                    %}

                    <h3>Last players</h3>

                    {%
                        render "SensioHangmanBundle:Player:recent"
                        with { 'limit': 5 },
                        { 'standalone': true }
                    %}

                </div>
                <br class="clearfix" />
            </div>
        </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>